        <Button
            x:Name="NonScoreButton"
            Text="Get your first cards! :)"
            Clicked="NonScoreButton_Clicked"
            HorizontalOptions="Center" BackgroundColor="LightCoral"
            IsVisible="false" />


        <Button
            x:Name="DrawScoreButton"
            Text="Draw :)"
            Clicked="DrawScoreButton_Clicked"
            HorizontalOptions="Center" BackgroundColor="LightCoral"
            IsVisible="false" />

        <Button
